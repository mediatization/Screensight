<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_1"
    tools:context=".CaptureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue_3">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"

                app:toolbarId="@+id/mainToolbar">


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/mainToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:subtitle="by RPI Mediatization Lab and The ScreenLife Capture Team"
                    app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Body1"
                    app:subtitleTextColor="@color/dark_gray_3"
                    app:title="Screenlife Capture" />
            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <View
            android:id="@+id/m_appBarShadow"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/dark_gray_2" />

        <TextView
            android:id="@+id/m_captureStatusLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray_1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Capture Status"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:id="@+id/m_space0"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:id="@+id/m_captureLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/m_captureStatusDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STATUS"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_bracketCapture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="("
                    android:textSize="28sp" />

                <Space
                    android:id="@+id/m_brackSpaceCapture1"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/m_captureNumberLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X files"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/m_captureSizeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X mb"
                        android:textAlignment="center" />

                </LinearLayout>

                <Space
                    android:id="@+id/m_bracketSpaceCapture2"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/m_bracketCapture1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textSize="28sp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:id="@+id/m_space1"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/m_uploadStatusLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray_1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Upload Status"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:id="@+id/m_space2"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <LinearLayout
            android:id="@+id/m_uploadLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/m_uploadStatusDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STATUS"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_bracketUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="("
                    android:textSize="28sp" />

                <Space
                    android:id="@+id/m_bracketSpaceUpload"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/m_uploadResultLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X files"
                        android:textAlignment="center" />

                </LinearLayout>

                <Space
                    android:id="@+id/m_bracketSpaceUpload2"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/m_bracketUpload1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textSize="28sp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:id="@+id/m_space3"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/m_startStopCaptureButton"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_button"
            android:shadowColor="@color/dark_gray_1"
            android:text="START CAPTURE"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            app:backgroundTint="@null"
            app:strokeColor="@color/dark_gray_1"
            app:strokeWidth="6dp" />

        <Space
            android:id="@+id/m_space4"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/m_resumePauseCaptureButton"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_button"
            android:text="PAUSE CAPTURE"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            app:backgroundTint="@null" />

        <Space
            android:id="@+id/m_space5"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/m_uploadButton"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_button"
            android:text="UPLOAD AND CLEAR STORED FILES"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            app:backgroundTint="@null"
            app:strokeWidth="6dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/m_blackOutPanel"
        android:layout_width="418dp"
        android:layout_height="734dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/screen_background_dark" />
</androidx.constraintlayout.widget.ConstraintLayout>